<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-money"></i> Currency
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Create Currency Exchange</h3>
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@currency, url: currencies_path, html: { id: "currency-create-form" }) do |f| %>
              <form>



                <div class="form-group">
                  <label for="pwd">Currency Exchange:</label>
                  <%= f.text_field :change, id: "type_field", class: 'form-control', placeholder:"1 RMB to 1 MYR", type:"text" %>
                </div>


                <%= f.submit "Create Currency", class: "btn btn-success btn-lg", type:"submit" %>

              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
