<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Parcel
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Update Parcel</h3>
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@parcel, url: parcel_path(@parcel), html: { id: "parcel-update-form" }) do |f| %>
              <form>
                <div class="form-group">
                  <label for="type">Type of parcel</label>
                  <%= f.select :parcel_good, [ 'Normal', 'Sensitive'], :prompt => 'Select One', class:"form-control" %>
                </div>
                <div class="form-group">
                  <label for="AWB">Air Way Bill (AWB):</label>
                  <%= f.text_field :awb, required: true, id: "type_field", class: 'form-control', placeholder:"AWB", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Item Description:</label>
                  <%= f.text_field :description, required: true, id: "type_field", class: 'form-control', placeholder:"Description", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Remarks:</label>
                  <%= f.text_field :remark, id: "type_field", class: 'form-control', placeholder:"Anything to note on your products", type:"text" %>
                </div>
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <strong>Add Extra Services</strong>
                    </tr>
                    <tr>
                      <th><b>Select</b></th>
                      <th><b>Service</b></th>
                      <th><b>Description</b></th>
                    </tr>
                  </thead>
                  <tbody>
                    <td class="text-center"><%= f.check_box :photoshoot, {}, "true", "false"%></td>
                    <td>Photoshoot</td>
                    <td>We will open the parcel and snap a picture of your product for your reference.</td>
                  </tbody>
                  <tbody>
                    <td class="text-center"><%= f.check_box :inspection, {}, "true", "false"%></td>
                    <td>Inspection</td>
                    <td>We will open the parcel and inspect each products for their quality and quantity.</td>
                  </tbody>
                  <tbody>
                    <td class="text-center"><%= f.check_box :reorganize, {}, "true", "false"%></td>
                    <td>Reorganize</td>
                    <td>We will pack all your separate parcels into one parcel to avoid expensive overcharge from volume metric </td>
                  </tbody>
                  <tbody>
                    <td class="text-center"><%= f.check_box :repackaging, {}, "true", "false"%></td>
                    <td>Repackaging</td>
                    <td>Any parcels that are torn, bulky or unpacked properly will be repack back</td>
                  </tbody>
                </table>
                <% if admin_user||staff_user%>
                <div class="form-group">
                  <label for="pwd">Weight:</label>
                  <%= f.text_field :weight, id: "type_field", class: 'form-control', placeholder:"Weight(kg)", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Volume Metric:</label>
                  <%= f.text_field :volume, id: "type_field", class: 'form-control', placeholder:"Volume Metric", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputFile">Upload Image:</label>
                  <input type="file" id="exampleInputFile">
                </div>
                <% else %>
                <% end %>

                <%= f.submit "Update Parcel", class: "btn btn-success btn-lg", type:"submit" %>
                <%= link_to 'Back', parcels_path, class:"btn btn-link" %>

              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
