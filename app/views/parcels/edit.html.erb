<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Parcel
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Update Parcel AWB</h3>
          </div>
          <div class="panel-body">

            <% if @parcel.status == "Waiting" %>
            <div class="container">
              <%= form_for(@parcel, url: update_awb_parcel_path(@parcel), html: { id: "parcel-update-form" }) do |f| %>
              <form>
                <div class="form-group">
                  <label for="AWB">Air Way Bill (AWB):</label>
                  <%= f.text_field :new_awb, id: "type_field", placeholder:"AWB", type:"text", required: true %>
                </div>
                <div>
                <%= f.submit "Submit", class: "btn btn-success btn-lg", type:"submit" %>
                <%= link_to 'Back', :back, class:"btn btn-link" %>
                </div>
              </form>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
