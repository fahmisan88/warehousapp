<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Parcel
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> My Parcel</h3>
          </div>
          <div class="panel-body">


            <table class="table">
              <tbody>
                <tr>
                  <th>AWB No.</th>
                  <td><%=@parcel.awb%></td>
                </tr>
                <tr>
                  <th>Product Description</th>
                  <td><%=@parcel.description%></td>
                </tr>
                <tr>
                  <th>Type of Parcel</th>
                  <td><%=@parcel.parcel_good%></td>
                </tr>
                <tr>
                  <th>Remarks</th>
                  <td><%=@parcel.remark%></td>
                </tr>
                <tr>
                  <th>Status</th>
                  <td><%=@parcel.status%></td>
                </tr>
                <tr>
                  <th>Extra Service</th>
                  <td>
                  <% if @parcel.photoshoot == true%>| Photoshoot | <% else;end%>
                  <% if @parcel.inspection == true%>| Inspection | <% else;end%>
                  <% if @parcel.reorganize == true%>| Reorganize | <% else;end%>
                  <% if @parcel.repackaging == true%>| Repackaging |<% else;end%>
                  </td>
                </tr>
                <tr>
                  <th>Weight</th>
                  <td><%=@parcel.weight%></td>
                </tr>
                <tr>
                  <th>Volume Metric</th>
                  <td><%=@parcel.volume%></td>
                </tr>
              </tbody>
            </table>
            <%= link_to 'Back', parcels_path, class:"btn btn-link" %>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Parcel Image</h3>
              </div>
              <div class="panel-body">
                  <div class="table-responsive">
                    <div class="list-group">
                        <a href="#" class="list-group-item">
                          <%=image_tag @parcel.image, class:"image-size"%>
                        </a>

                    </div>
                  </div>
                  <div class="text-right">
                      <a href="#">View Full Image <i class="fa fa-arrow-circle-right"></i></a>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>
</div>
