<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Parcel
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> My Parcel</h3>
          </div>
          <div class="panel-body">


            <table class="table">
              <tbody>
                <tr>
                  <th>AWB No.</th>
                  <td>
                    <% if @parcel.new_awb?%>
                    <%= @parcel.new_awb%>
                    <% else %>
                    <%=@parcel.awb%>
                    <% end%>
                    <% if @parcel.status == "Waiting"%>
                      <%= link_to "", edit_awb_path(@parcel), class:"fa fa-pencil" %>
                      <%else%>
                      <%end%>
                  </td>
                </tr>
                <tr>
                  <th>Product Description</th>
                  <td><%=@parcel.description%></td>
                </tr>
                <tr>
                  <th>Quantity</th>
                  <td><%=@parcel.product_quantity%></td>
                </tr>
                <tr>
                  <th>Price Per Unit</th>
                  <td>RMB <%=@parcel.price_per_unit%> /unit</td>
                </tr>
                <tr>
                  <th>Total Price</th>
                  <td>RMB <%=@parcel.product_total_price%></td>
                </tr>
                <tr>
                  <th>Product Name (Chinese)</th>
                  <td><%=@parcel.product_chinese%></td>
                </tr>
                <tr>
                  <th>Type of Parcel</th>
                  <td><%=@parcel.parcel_good%></td>
                </tr>
                <tr>
                  <th>Remarks</th>
                  <td><%=@parcel.remark%></td>
                </tr>
                <tr>
                  <th>Status</th>
                  <td><%=@parcel.status%></td>
                </tr>
                <tr>
                  <th>Extra Service</th>
                  <td>
                    <%if @parcel.photoshoot? || @parcel.inspection? %>
                  <% if @parcel.photoshoot == true%>| Photoshoot | <% else;end%>
                  <% if @parcel.inspection == true%>| Inspection | <% else;end%>
                  <% else %>
                  None
                  <%end%>
                  </td>
                </tr>
                <tr>
                  <th>Weight</th>
                  <td>
                    <% if @parcel.weight? %>
                    <%=@parcel.weight%> kg
                    <%else%>
                    Not Yet Available
                    <%end%>
                  </td>
                </tr>
                <tr>
                  <th>Volume Metric</th>
                  <td>
                    <% if @parcel.volume? %>
                    <%=@parcel.volume%> kg (<%=@parcel.width%> cm X <%=@parcel.length%> cm X <%=@parcel.height%> cm)
                    <% else %>
                    Not Yet Available
                    <% end%>
                  </td>
                </tr>

              </tbody>
            </table>
            <%= link_to 'Back', parcels_path, class:"btn btn-link" %>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Parcel Image</h3>
              </div>
              <div class="panel-body">
                  <div class="table-responsive">
                    <div class="list-group">
                        <a href="#" class="list-group-item">
                          <%=image_tag @parcel.image, class:"image-size"%>
                        </a>

                    </div>
                  </div>
                  <div class="text-right">
                      <a href="#">View Full Image <i class="fa fa-arrow-circle-right"></i></a>
                  </div>
              </div>
          </div>
      </div>
      <div class="col-lg-4">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i>Received Parcel Image</h3>
              </div>
              <div class="panel-body">
                <%if @parcel.image1? || @parcel.image2? || @parcel.image3? || @parcel.image4? || @parcel.image5? %>
                  <div class="table-responsive">
                    <div class="list-group text-center">
                        <a href="#" class="list-group-item">
                          <%=image_tag @parcel.image1, class:"image-size-thumb"%>&nbsp;<%=image_tag @parcel.image2, class:"image-size-thumb"%>&nbsp;<%=image_tag @parcel.image3, class:"image-size-thumb"%>&nbsp;<%=image_tag @parcel.image4, class:"image-size-thumb"%>&nbsp;<%=image_tag @parcel.image5, class:"image-size-thumb"%>
                        </a>
                    </div>
                  </div>
                  <div class="text-right">
                      <a href="<%=edit_parcel_path%>">Not Your Ordered Product? Apply for Refund! <i class="fa fa-arrow-circle-right"></i></a>
                  </div>
                  <%else%>
                  No Image Available For Received Parcel
                  <%end%>

              </div>
          </div>
      </div>
    </div>
  </div>
</div>
</div>
