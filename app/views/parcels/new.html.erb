<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Parcel
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Create Parcel</h3>
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@parcel, url: parcels_path, html: { id: "parcel-create-form" }) do |f| %>
              <form>
                <div class="form-group">
                  <label for="type">Type of parcel</label>
                  <%= f.select :parcel_good, [ 'Normal', 'Sensitive', 'I Dont Know'],{ :include_blank => '-- Select One --' }, class:"form-control", required: true %>
                </div>
                <div class="form-group">
                  <label for="AWB">Air Way Bill (AWB):</label>
                  <%= f.text_field :awb, required: true, id: "type_field", class: 'form-control', placeholder:"AWB", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Product Description:</label>
                  <%= f.text_field :description, required: true, id: "type_field", class: 'form-control', placeholder:"Description", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Product Quantity:</label>
                  <%= f.text_field :product_quantity, required: true, id: "type_field", class: 'form-control', placeholder:"Quantity", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Price Per Unit:</label>
                  <%= f.text_field :price_per_unit, required: true, id: "type_field", class: 'form-control', placeholder:"RMB", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Total Price:</label>
                  <%= f.text_field :product_total_price, required: true, id: "type_field", class: 'form-control', placeholder:"RMB", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Product Name in Chinese:</label>
                  <%= f.text_field :product_chinese, required: true, id: "type_field", class: 'form-control', placeholder:"Copy paste product name in Chinese", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Remarks:</label>
                  <%= f.text_field :remark, id: "type_field", class: 'form-control', placeholder:"Anything to note on your products", type:"text" %>
                </div>
                <div class="form-group">
                  <%= f.label :"Upload Image" %>
                  <%= f.file_field :image, class:"form-control" %>
                </div>
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <strong>Add Extra Services</strong>
                    </tr>
                    <tr>
                      <th><b>Select</b></th>
                      <th><b>Service</b></th>
                      <th><b>Description</b></th>
                    </tr>
                  </thead>
                  <tbody>
                    <td class="text-center"><%= f.check_box :photoshoot, {}, "true", "false"%></td>
                    <td>Photoshoot</td>
                    <td>Please snap picture for me when my parcel arrive</td>
                  </tbody>
                  <tbody>
                    <td class="text-center"><%= f.check_box :inspection, {}, "true", "false"%></td>
                    <td>Inspection</td>
                    <td>Please inspect my goods quantity when my parcel arrive</td>
                  </tbody>
                  
                </table>
                <br>

                <%= f.submit "Create Parcel", class: "btn btn-success btn-lg", type:"submit" %>
                <%= link_to 'Back', parcels_path, class:"btn btn-link" %>

              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
