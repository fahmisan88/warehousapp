<div class="container banner">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Create Parcel
        </div>
        <div class="panel-body">
          <div class="container">
            <%= form_for(@parcel, url: parcels_path, html: { id: "parcel-create-form" }) do |f| %>
            <div class="row">
              <div class="col-sm-12 add_bottom_30">
                <h4>Product Details</h4>
                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-4">
                      <label>Type</label>
                      <%= f.select :parcel_good, [ 'Normal', 'Sensitive battery', 'Sensitive cosmetic', 'Sensitive magnet', 'Sensitive branded'],{ :include_blank => '-- Select One --' }, class:"form-control", required: true %>
                    </div>
                    <div class="col-sm-4">
                      <label>AWB</label>
                      <%= f.text_field :awb, required: true, id: "type_field", class: 'form-control', placeholder:"AWB", type:"text" %>
                    </div>
                    <div class="col-sm-4">
                      <label>Product Name (Chinese)</label>
                      <!-- <%= f.text_field :product_chinese, required: true, id: "type_field", class: 'form-control', placeholder:"Copy paste product name in Chinese", type:"text" %> -->
                      <input type="text" name="parcel[product_chinese]" class="form-control" placeholder="Copy and paste product name in chinsee" data-validation="custom,required" data-validation-regexp="^([ ,\u4E00-\u9FFF\\]+)$" data-validation-error-msg="only allowed chinese characters">
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-4">
                      <label>Quantity</label>
                      <%= f.text_field :product_quantity, required: true, id: "type_field", class: 'form-control', placeholder:"Quantity", type:"text" %>
                    </div>
                    <div class="col-sm-4">
                      <label>Price per unit</label>
                      <%= f.text_field :price_per_unit, required: true, id: "type_field", class: 'form-control', placeholder:"RMB", type:"text" %>
                    </div>
                    <div class="col-sm-4">
                      <label>Total Price</label>
                      <%= f.text_field :product_total_price, required: true, id: "type_field", class: 'form-control', placeholder:"RMB", type:"text" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-12">
                      <label>Product Description</label>
                      <%= f.text_area :description, required: true, id: "type_field", class: 'form-control', placeholder:"Description", type:"text" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-6">
                      <label>Remarks</label>
                      <%= f.text_field :remark, id: "type_field", class: 'form-control', placeholder:"Anything to note on this products", type:"text" %>
                    </div>
                  </div>
                </div>
                <hr>
                <h4>Extra Services <small>(optional)</small></h4>
                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-md-4">
                      <%= f.check_box :photoshoot %> Photoshoot
                    </div>
                    <div class="col-md-4">
                      <%= f.check_box :inspection %> Inspection
                    </div>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-md-6 col-sm-6 add_bottom_30">
                    <h4>Product Image</h4>
                    <div class="form-group">
                      <label>(png/jpeg/jpg)</label>
                      <%= f.file_field :image, required: true, class: 'form-control' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%= f.hidden_field :ezi_id, value: current_user.ezi_id %>
            <%= f.submit "Create Parcel", class: "btn btn-form btn-normal", type:"submit" %>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $.validate({
    modules : 'html5'
  });
})
</script>
