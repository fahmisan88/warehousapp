<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Parcel
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Create Parcel</h3>
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@parcel, url: parcels_path, html: { id: "parcel-create-form" }) do |f| %>
              <form>
                <div class="form-group">
                  <label for="type">Type of parcel</label>
                  <%= f.select :parcel_good, [ 'Normal', 'Sensitive'],{ :include_blank => '-- Select One --' }, class:"form-control", required: true %>
                </div>
                <div class="form-group">
                  <label for="AWB">Air Way Bill (AWB):</label>
                  <%= f.text_field :awb, required: true, id: "type_field", class: 'form-control', placeholder:"AWB", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Product Description:</label>
                  <%= f.text_field :description, required: true, id: "type_field", class: 'form-control', placeholder:"Description", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Remarks:</label>
                  <%= f.text_field :remark, id: "type_field", class: 'form-control', placeholder:"Anything to note on your products", type:"text" %>
                </div>
                <div class="form-group">
                  <%= f.label :"Upload Image" %>
                  <%= f.file_field :image, class:"form-control" %>
                </div>

                <%= f.submit "Create Parcel", class: "btn btn-success btn-lg", type:"submit" %>
                <%= link_to 'Back', parcels_path, class:"btn btn-link" %>

              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
