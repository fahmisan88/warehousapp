                <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i>Received Parcel Image</h3>
              </div>
              <div class="panel-body">
                <%if @parcel.image1? || @parcel.image2? || @parcel.image3? || @parcel.image4? || @parcel.image5? %>
