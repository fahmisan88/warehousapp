<div class="container banner">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          Request Refund
        </div>
        <div class="panel-body">
          <div class="container">
            <%= form_for(@parcel, url: update_request_refund_parcel_path(@parcel), html: { id: "parcel-update-form" }) do |f| %>
            <form>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th><b>Select</b></th>
                    <th><b>AWB</b></th>
                    <th><b>Description</b></th>
                  </tr>
                </thead>
                <tbody>
                  <td class="text-center"><%= f.check_box :refund, required: true%></td>
                  <td>
                    <% if @parcel.new_awb?%>
                    <%= @parcel.new_awb%>
                    <%else%>
                    <%= @parcel.awb%>
                    <%end%>
                  </td>
                  <td><%=@parcel.description%></td>
                </tbody>
              </table>

              <div class="form-group">
                <label for="refund">Reason:</label>
                <%= f.text_field :refund_explain, id: "type_field", class: 'form-control', placeholder:"Why apply for refund?", type:"text", required: true %>
              </div>
              <div>
                <%= link_to 'Back', parcel_path, class:"btn btn-info" %>
                <%= f.submit "Submit", class: "btn btn-form btn-normal", type:"submit" %>
              </div>
            </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
