<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Parcel
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Request Refund </h3>
          </div>
          <div class="panel-body">

            <div class="container col-lg-10">
              <%= form_for(@parcel, url: update_request_refund_parcel_path(@parcel), html: { id: "parcel-update-form" }) do |f| %>
              <form>
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th><b>Select</b></th>
                      <th><b>AWB</b></th>
                      <th><b>Description</b></th>
                    </tr>
                  </thead>
                  <tbody>
                    <td class="text-center"><%= f.check_box :refund, required: true%></td>
                    <td>
                      <% if @parcel.new_awb?%>
                      <%= @parcel.new_awb%>
                      <%else%>
                        <%= @parcel.awb%>
                        <%end%>
                    </td>
                    <td><%=@parcel.description%></td>
                  </tbody>
                </table>

                <div class="form-group">
                  <label for="refund">Reason:</label>
                  <%= f.text_field :refund_explain, id: "type_field", class: 'form-control', placeholder:"Why apply for refund?", type:"text", required: true %>
                </div>
                <div>
                <%= f.submit "Submit", class: "btn btn-success btn-lg", type:"submit" %>
                <%= link_to 'Back', parcel_path, class:"btn btn-link" %>
                </div>
              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
