<div class="container banner">
  <div class="row">
      <div class="col-xs-10">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-user fa-fw"></i> Add Address </h3>
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@user, url: user_path(@user), html: { class: "address-update-form" }) do |f| %>
                <div class="form-group col-xs-10">
                  <label for="address">Address:</label>
                  <%= f.text_field :address, id: "type_field", class: 'form-control', type:"text", data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="address">City:</label>
                  <%= f.text_field :city, id: "type_field", class: 'form-control', data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="type">State:</label>
                  <%= f.select :address2, [ 'Selangor', 'Kuala Lumpur', 'Kedah', 'P.Pinang', 'Perlis', 'Terengganu', 'Kelantan', 'Pahang', 'Johor', 'Perak', 'N.Sembilan', 'Melaka', 'Sabah', 'Sarawak', 'Putrajaya'],{ :include_blank => '-- Select One --' }, class:"form-control", data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="address">Postcode:</label>
                  <%= f.text_field :postcode, id: "type_field", class: 'form-control', type:"text", data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="phone">Mobile Phone:</label>
                  <div class="input-group">
                    <span class="input-group-addon">+60</span>
                    <%= f.text_field :phone, id: "type_field", class: 'form-control', type:"text", placeholder: "012345678901", data: {:validation => "required,server", :validation_url => "/checkmobile"} %>
                  </div>
                </div>
                <div class="col-xs-10">
                  <%= f.submit "Add Address", class: "btn btn-success btn-lg", type:"submit" %>
                </div>
              <% end %>
            </div>
            <div class="text-center">
              <h2>
                Please make sure your address is complete, this step cannot be modified later.
              </h2>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<script>
$.validate({
  modules : 'html5, security, toggleDisabled',
  disabledFormFilter : 'form.address-update-form'
});
</script>
