<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-user"></i> User
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-user fa-fw"></i> Update Account</h3>
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@user, url: user_path(@user), html: { id: "parcel-update-form" }) do |f| %>
              <form>
                <div class="form-group">
                  <label for="Password">Password</label>
                  <%= f.text_field :password, id: "type_field", class: 'form-control', placeholder:"******", type:"password" %>
                </div>
                <div class="form-group">
                  <label for="address">Address:</label>
                  <%= f.text_field :address, id: "type_field", class: 'form-control', type:"text" %>
                </div>
                <div class="form-group">
                  <label for="address">Postcode:</label>
                  <%= f.text_field :postcode, id: "type_field", class: 'form-control', type:"text" %>
                </div>
                <div class="form-group">
                  <label for="phone">Mobile Phone:</label>
                  <%= f.text_field :phone, id: "type_field", class: 'form-control', type:"text" %>
                </div>

                <%= f.submit "Update Account", class: "btn btn-success btn-lg", type:"submit" %>
                <%= link_to 'Back', dashboard_path, class:"btn btn-link" %>

              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
