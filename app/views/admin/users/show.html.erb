<div class="container banner">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          Profile
        </div>
        <div class="panel-body">
          <table class="table">
            <tbody>
              <tr>
                <th>EZI ID</th>
                <td><%=@user.ezi_id%></td>
              </tr>
              <tr>
                <th>Name</th>
                <td><%=@user.name%></td>
              </tr>
              <tr>
                <th>Email</th>
                <td><%=@user.email%></td>
              </tr>
              <tr>
                <th>Address</th>
                <td><%=@user.address%></td>
              </tr>
              <tr>
                <th>State</th>
                <td><%=@user.address2%></td>
              </tr>
              <tr>
                <th>Postcode</th>
                <td><%=@user.postcode%></td>
              </tr>
              <tr>
                <th>Mobile Phone</th>
                <td><%=@user.phone%></td>
              </tr>
              <tr>
                <th>Member since</th>
                <td><%=@user.created_at.strftime("%d-%m-%Y")%></td>
              </tr>
              <tr>
                <th>Membership Expiry</th>
                <td><%=@user.expiry.strftime('%a, %d %b %G')%></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
