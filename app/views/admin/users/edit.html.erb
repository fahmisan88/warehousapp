<div class="container banner">
  <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            Change Address And Phone
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@user, url: admin_user_path(@user), html: { class: "user-update-form" }) do |f| %>
                <div class="form-group col-xs-10">
                  <label for="address">Name:</label>
                  <%= f.text_field :name, id: "type_field",class: 'form-control', type:"text", data: {:validation => "required,custom", :validation_regexp => "^[a-zA-Z\x27\x2d\x40 ]{5,80}$", :validation_error_msg => "Only letters, space, single quote ('), hyphen (-) and alias (@) are allowed between 5 to 80 characters"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="address">Address:</label>
                  <%= f.text_field :address, id: "type_field", class: 'form-control', type:"text", data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="address">City:</label>
                  <%= f.text_field :city, id: "type_field", class: 'form-control', type:"text", data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="type">State:</label>
                  <%= f.select :address2, [ 'Selangor', 'Kuala Lumpur', 'Kedah', 'P.Pinang', 'Perlis', 'Terengganu', 'Kelantan', 'Pahang', 'Johor', 'Perak', 'N.Sembilan', 'Melaka', 'Sabah', 'Sarawak', 'Putrajaya'],{ :include_blank => '-- Select One --' },
                   class:"form-control", data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="address">Postcode:</label>
                  <%= f.text_field :postcode, id: "type_field", class: 'form-control', type:"text", data: {:validation => "required"} %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="phone">Mobile Phone:</label>
                  <div class="input-group">
                    <span class="input-group-addon">+60</span>
                    <%= f.text_field :phone, id: "type_field", class: 'form-control', type:"text", placeholder: "012345678901", data: {:validation => "required,server", :validation_url => "/checkmobile"} %>
                  </div>
                </div>
                <div class="col-xs-10">
                  <%= f.submit "Update", class: "btn btn-success btn-form", type:"submit" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<script>
$.validate({
  modules : 'html5, security'
});
</script>
