
<div class="container banner">
  <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            Update User
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@user, url: update_id_admin_user_path(@user), html: { id: "parcel-update-form" }) do |f| %>
              <form>
                <div class="form-group col-xs-10">
                  <label for="address">EZI ID:</label>
                  <%= f.text_field :ezi_id, id: "type_field", class: 'form-control', type:"text", required: true %>
                </div>
                <div class="form-group col-xs-10">
                  <label for="phone">User Expiry Date:</label>
                  <%= f.text_field :expiry, id: "type_field", class: 'form-control', type:"text", required: true, placeholder:"dd/mm/yyyy" %>
                </div>
                <div class="col-xs-10">
                  <%= f.submit "Update User", class: "btn btn-success btn-form", type:"submit" %>
                </div>
              </form>
              <% end %>
            </div>
            <div class="text-center">
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
