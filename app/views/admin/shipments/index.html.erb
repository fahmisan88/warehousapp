<div class="container banner">
  <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            All Shipments
          </div>
          <div class="panel-body">
            <div class = "shipments text-center">
              <% if @shipments.empty? %>
              <h3 class="text-center">NO SHIPMENTS AVAILABLE</h3>
            </div>
            <% else %>
          </div>
          <div style="overflow-x:auto;">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Date</th>
                  <th>Ship ID</th>
                  <th>Charges</th>
                  <th>
                    <div class="dropdown">
                      <button class="btn btn-small-dropdown dropdown-toggle" type="button" data-toggle="dropdown">Status
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                          <li>
                            <a href="/admin/shipments">
                              <i class="icon_set_1_icon-11"></i>All
                            </a>
                          </li>
                          <li>
                            <a href="/admin/shipments?status=Processing" <%if @filter_params == "Processing" %>id="active" <% end %> >
                              <i class="icon_set_1_icon-11"></i>Processing
                            </a>
                          </li>
                          <li>
                            <a href="/admin/shipments?status=Awaiting%20Payment" <%if @filter_params == "Awaiting Payment" %>id="active" <% end %> >
                              <i class="icon_set_1_icon-11"></i>Awaiting Payment
                            </a>
                          </li>
                          <li>
                            <a href="/admin/shipments?status=Paid" <%if @filter_params == "Paid" %>id="active" <% end %> >
                              <i class="icon_set_1_icon-11"></i>Paid
                            </a>
                          </li>
                        </ul>
                      </div>
                    </th>
                    <th>
                      <%= form_tag(admin_shipments_path, method: "get", id: "search-form") do %>
                      <%= text_field_tag :search, params[:search], placeholder: "EZI ID", size: 5 %>
                      <%end%>
                    </th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if params[:page].nil? || params[:page] == "0" || params[:page] == "1" %>
                  <% x = 0 %>
                  <% else %>
                  <% page = params[:page].to_i - 1 %>
                  <% x = page * 10 %>
                  <% end %>
                  <%@shipments.each_with_index do |shipment, index|%>
                  <tr>
                    <td><%= index + x + 1 %></td>
                    <td><%= shipment.updated_at.strftime("%d-%m-%Y  (%H:%M)")%> </td>
                    <td><%= shipment.id%></td>
                    <td>
                      <%if shipment.charge.nil? %>
                      Calculating...
                      <%else%>
                      RM <%= shipment.charge%>
                      <% end%>
                    </td>
                    <td><%= shipment.status%></td>
                    <td><%= shipment.user.ezi_id%></td>
                    <td>
                      <span><%= link_to "", admin_shipment_path(shipment), class:"fa fa-eye" %></span>&nbsp;&nbsp;<span>
                      </td>
                      <%end%>
                      <%end%>
                    </tr>
                  </tbody>
                </table>
                <nav class="text-center">
                  <%= paginate @shipments %>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
</div>
