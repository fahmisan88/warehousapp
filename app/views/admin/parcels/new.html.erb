<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Create Parcel For User</h3>
          </div>
          <div class="panel-body" style="padding-left:80px;padding-right:80px;">
          <%= form_for(@parcel , url: admin_parcels_path, method: :post) do |f| %>
            <div class="row">
              <div class="col-sm-12 add_bottom_30">
                <h4>Product Details</h4>
                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-4">
                      <label>Type</label>
                      <%= f.select :parcel_good, [ 'Normal', 'Sensitive'],{ :include_blank => '-- Select One --' }, class:"form-control", required: true %>
                    </div>
                    <div class="col-sm-4">
                      <label>AWB</label>
                      <%= f.text_field :awb, required: true, id: "type_field", class: 'form-control', placeholder:"AWB", type:"text" %>
                    </div>
                    <div class="col-sm-4">
                      <label>Product Name (Chinese)</label>
                      <%= f.text_field :product_chinese, required: true, id: "type_field", class: 'form-control', placeholder:"Copy paste product name in Chinese", type:"text" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-4">
                      <label>Quantity</label>
                      <%= f.text_field :product_quantity, required: true, id: "type_field", class: 'form-control', placeholder:"Quantity", type:"text" %>
                    </div>
                    <div class="col-sm-4">
                      <label>Price per unit</label>
                      <%= f.text_field :price_per_unit, required: true, id: "type_field", class: 'form-control', placeholder:"RMB", type:"text" %>
                    </div>
                    <div class="col-sm-4">
                      <label>Total Price</label>
                      <%= f.text_field :product_total_price, required: true, id: "type_field", class: 'form-control', placeholder:"RMB", type:"text" %>
                    </div>
                  </div>
                </div>

          			<div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-12">
                      <label>Product Description</label>
                      <%= f.text_area :description, required: true, id: "type_field", class: 'form-control', placeholder:"Description", type:"text" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-6">
                      <label>Remarks</label>
                      <%= f.text_field :remark, id: "type_field", class: 'form-control', placeholder:"Anything to note on this products", type:"text" %>
                    </div>
                    <div class="col-sm-6">
                      <label>For User</label>&nbsp;<small><b>(Ezi ID)</b></small>
                      <%= f.text_field :ezi_id, id: "type_field", class: 'form-control', placeholder:"eg. Q007", type:"text" %>
                    </div>
                  </div>
                </div>
                <hr>
                <h4>Product Dimension</h4>
                <div class="row">
                  <div class="form-group pull-in clearfix">
                    <div class="col-sm-3">
                      <label>Weight</label>
                      <%= f.text_field :weight, id: "type_field", class: 'form-control', placeholder:"(kg))", type:"text" %>
                    </div>
                    <div class="col-sm-3">
                      <label>Width</label>
                      <%= f.text_field :width, id: "type_field", class: 'form-control', placeholder:"(kg))", type:"text" %>
                    </div>
                    <div class="col-sm-3">
                      <label>Length</label>
                      <%= f.text_field :length, id: "type_field", class: 'form-control', placeholder:"(kg))", type:"text" %>
                    </div>
                    <div class="col-sm-3">
                      <label>Height</label>
                      <%= f.text_field :height, id: "type_field", class: 'form-control', placeholder:"(kg))", type:"text" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-md-6 col-sm-6 add_bottom_30">
                <h4>Product Image</h4>
                <div class="form-group">
                  <label>(png/jpeg/jpg)</label>
                  <%= f.file_field :image, required: true, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12 col-sm-12 add_bottom_30">
                <hr>
                <%= f.submit "Create", class: "btn btn-lg btn-info"%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
