<div class="container banner">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            Update Currency Exchange
          </div>
          <div class="panel-body">

            <div class="container">
              <%= form_for(@currency, url: admin_currency_path(@currency), html: { id: "currency-update-form" }) do |f| %>
              <form>
                <div class="form-group">
                  <label for="pwd">Currency Exchange (RMB to MYR):</label>
                  <%= f.text_field :rmb2myr, id: "type_field", class: 'form-control', placeholder:"eg. 0.64", type:"text" %>
                </div>
                <div class="form-group">
                  <label for="pwd">Currency Exchange (MYR to RMB):</label>
                  <%= f.text_field :myr2rmb, id: "type_field", class: 'form-control', placeholder:"eg. 1.65", type:"text" %>
                </div>
                <%= f.submit "Update Currency", class: "btn btn-normal btn-form", type:"submit" %>

              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
