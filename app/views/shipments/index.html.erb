<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
      <div class="col-lg-12">
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-ship"></i> Shipment
          </li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-search fa-fw"></i>Sort by Status</h3>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <div class="list-group">
                <%= form_tag(shipments_path, method: "get", id: "search-form") do %>
                <b class="list-group-item text-center">
                  <%= text_field_tag :search, params[:search], class: "form-control text", placeholder:"Status" %>
                  <%= submit_tag "Search", :name => nil%>
                </b>
                <%end%>

              </div>
            </div>
            <div class="text-right">
              <a href="<%=shipments_path%>">View All <i class="fa fa-arrow-circle-right"></i></a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-10">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-ship fa-fw"></i> My Shipments</h3>
          </div>
          <div class="panel-body">
            <div class = "shipments text-center">

              <% if @shipments.empty? %>
              <h3 class="text-center">No shipments available or match the shipment ID <%= params[:search] %>. Please create shipment first.</h3>
              <%= link_to "Create Shipment", new_shipment_path(id: @shipment), class: "btn btn-success btn-lg" %>
            </div>
            <% else %>
            <br>
            <br>

          </div>
          <div>


            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Shipment ID</th>
                  <th>Charges</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <%@shipments.each do |shipment|%>
                <tr>
                  <td><%= shipment.updated_at.strftime("%d-%m-%Y  (%H:%M)")%> </td>
                  <td><%= shipment.id%></td>
                  <td>
                    <%if shipment.charge.nil? %>
                    Calculating...
                    <%else%>
                    RM <%= shipment.charge%>
                    <% end%>
                  </td>
                  <td><%= shipment.status%></td>
                  <td><span>
                    <% if (admin_user||staff_user) && shipment.charge.nil?%>
                    <%= link_to "", edit_shipment_path(shipment), class:"fa fa-pencil" %>
                  </span>&nbsp;&nbsp;
                  <% else %>
                  <% end %>
                  <span>
                    <%if shipment.charge.nil? %>
                    <%= link_to "", shipment_path(shipment), class:"fa fa-eye" %></span>&nbsp;&nbsp;
                    <span><%= link_to "", shipment_path(shipment), class:"fa fa-trash", data: { confirm: "Are you sure you want delete this shipment?"}, method: :delete %></span>
                    <% elsif shipment.status == "Paid"%>
                    <%= link_to "", shipment_path(shipment), class:"fa fa-eye" %></span>&nbsp;&nbsp;
                    <% else%>
                    <%= link_to "Pay Now", shipment_path(shipment) %></span>&nbsp;&nbsp;
                    <% if admin_user || staff_user %>
                    <span><%= link_to "", shipment_path(shipment), class:"fa fa-trash", data: { confirm: "Are you sure you want delete this shipment?"}, method: :delete %></span>
                    <% else %>
                    <%end%>
                    <% end%>
                  </td>
                  <%end%>
                  <%end%>
                </tr>
              </tbody>
            </table>
            <nav>
              <%= paginate @shipments %>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
