<br>
<div id="wrapper">
  <div id="page-wrapper">
<br>
<br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-ship"></i> Shipment
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-ship fa-fw"></i> Create Shipment</h3>
          </div>
          <div class="panel-body">
            <%= form_for(@shipment, url: shipments_path, html: { id: "shipment-create-form" }) do |f| %>
            <div class = "shipments">

              <% if @parcels.empty? %>
              <h3 class="text-center">No parcels available yet for shipment</h3>
              <% else %>

              <table class="form-group table table-bordered">
                <thead>
                  <tr>
                    Parcel List
                  </tr>
                  <tr>
                    <th>Select</th>
                    <th>AWB No.</th>
                    <th>Product Description</th>
                    <th>Status</th>
                    <th>Weight(kg)</th>
                    <th>Volume Metric(kg)</th>

                  </tr>
                </thead>
                <% @parcels.each do |parcel|%>
                <tbody>
                  <% if parcel.status != ("Ready To Ship"||"Shipped") %>
                  <tr>
                    <td class="text-center">
                      <%if parcel.status == "Pending"%>
                      <%else%>
                      <%= check_box_tag 'parcel_id[]', parcel.id, required: true%>
                      <% end%>
                    </td>
                    <td><%= label_tag parcel.awb%></td>
                    <td><%= label_tag parcel.description %></td>
                    <td><%= label_tag parcel.status %></td>
                    <td><%= label_tag parcel.weight %></td>
                    <td><%= label_tag parcel.volume %></td>
                  </tr>
                  <% else %>
                  <% end %>
                  <%end%>
                  <tr>
                    <td colspan="4" align="right">Total Kg</td>
                    <td> <span id="totalweight"><%=@parcels.sum(:weight)%></span> (kg)</td>
                    <td> <span id="totalmetric"><%=@parcels.sum(:volume)%></span> (kg)</td>

                  </tr>
                  <% if @parcels.sum(:volume)> @parcels.sum(:weight)%>
                  <tr>
                    <td colspan="4" align="right"><strong>  Chargeable Kg </strong></td>
                    <td colspan="2" align="left" class="text-center"> <span id="totalweight"><%=@parcels.sum(:chargeable)%></span> (kg)</td>
                  </tr>
                  <%else%>
                  <%end%>
                </tbody>
              </table>

              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <strong>Add Extra Services</strong>
                  </tr>
                  <tr>
                    <th><b>Select</b></th>
                    <th><b>Service</b></th>
                    <th><b>Description</b></th>
                  </tr>
                </thead>
                <tbody>
                  <td class="text-center"><%= f.check_box :reorganize, {}, "true", "false"%></td>
                  <td>Reorganize</td>
                  <td>Please reorganize my parcel for shipment</td>
                </tbody>
                <tbody>
                  <td class="text-center"><%= f.check_box :repackaging, {}, "true", "false"%></td>
                  <td>Repackaging</td>
                  <td>Please repackaging my parcel for shipment</td>
                </tbody>

              </table>


              <div class="form-group">
                <label> <%= f.label :type_field, "Remarks" %> </label>
                <%= f.text_field :remark, id: "type_field", class: 'form-control', type:"text" %>

              </div>

              <div class="form-group">
                <%= f.submit "Post Shipment", class:"btn btn-success" %>
              </div>
              <%= link_to 'Back', shipments_path, class:"btn btn-link" %>

            </div>
            <%end%>
            <% end %>
          </div>
        </div>

      </div>
      <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-home fa-fw"></i> Shipping Address</h3>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <div class="list-group">
                <b href="#" class="list-group-item">

                  <b>Name: </b>
                  <%=current_user.name %>
                  <br>
                  <b>Address: </b>
                  <%=current_user.address%>
                  <br>
                  <b>Postcode:</b>
                  <%=current_user.postcode%>
                  <br>
                  <b>Phone No.:</b>
                  <%=current_user.phone%>
                </b>

              </div>
            </div>
            <%if current_user.address.nil?%>
            <div class="text-right">
              <a href="<%=edit_user_path(current_user)%>">Update Shipping Address <i class="fa fa-arrow-circle-right"></i></a>
            </div>
            <%else%>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
