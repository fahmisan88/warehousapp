<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-ship"></i> Shipment
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-ship fa-fw"></i> Shipment Bill </h3>
          </div>
          <div class="panel-body">
            <div class="section top-padding">
              <div class="container">

                <%= form_for @shipment do |f| %>
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <strong>Added Services</strong>
                    </tr>
                    <tr>
                      <th><b>Select</b></th>
                      <th><b>Service</b></th>
                      <th><b>Description</b></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if @shipment.reorganize == true%>
                    <td class="text-center fa fa-check"></td>
                    <% else %>
                    <td class="text-center"></td>
                    <% end %>
                    <td>Reorganize</td>
                    <td>Please reorganize my parcel for shipment</td>
                  </tbody>
                  <tbody>
                    <% if @shipment.repackaging == true%>
                    <td class="fa fa-check"></td>
                    <% else %>
                    <td class="text-center"></td>
                    <% end %>
                    <td>Repackaging</td>
                    <td>Please repackaging my parcel for shipment</td>
                  </tbody>

                </table>
                <div>
                  <%= f.label :weight %>
                  <%= f.text_field :weight, class:"form-control" %>
                </div>
                <div>
                  <%= f.label :"volume metric" %>
                  <%= f.text_field :volume, class:"form-control" %>
                </div>
                <div>
                  <%= f.label :"chargeable volume metric" %>
                  <%= f.text_field :chargeable, class:"form-control" %>
                </div>
                <div>
                  <%= f.label :"charge" %>
                  <%= f.text_field :charge, class:"form-control" %>
                </div>
                <br>
                <%if @shipment.charge?%>
                <div>
                    <%= f.submit "Post Payment Request", class:"btn btn-success btn-lg" %>
                  </div>

                  <% else %>
                  <% end %>
                  <% end %>
                  <br>
                  <div>
                  <%= form_for(@shipment, url: calculate_shipment_path(@shipment), html: { id: "calculate-form" }) do |f| %>
                  <%= f.submit "Calculate", class: "btn btn-success", type:"submit" %>
                  <% end %>
                  </div>

                  <%= link_to 'Back', shipments_path, class:"btn btn-link" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
