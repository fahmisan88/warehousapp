<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-ship"></i> Shipment
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-home fa-fw"></i> Shipping Address</h3>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <div class="list-group">
                <b href="#" class="list-group-item">

                  <b>Name: </b>
                  <%=@shipment.user.name %>
                  <br>
                  <b>Address: </b>
                  <%=@shipment.user.address%>
                  <br>
                  <b>Postcode:</b>
                  <%=@shipment.user.postcode%>
                  <br>
                  <b>Phone No.:</b>
                  <%=@shipment.user.phone%>
                </b>

              </div>
            </div>
            <%if @shipment.user.address.nil?%>
            <div class="text-right">
              <a href="#">Update Shipping Address <i class="fa fa-arrow-circle-right"></i></a>
            </div>
            <%else%>
            <%end%>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Selected Parcel</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">

              <thead>
                <tr>
                  <th>AWB</th>
                  <th>Description</th>
                  <th>Type</th>
                  <th>Weight(kg)</th>
                  <th>Volume Metric</th>
                </tr>
              </thead>

              <tbody>
                <% @shipment.ordered_parcels.each do |ordered_parcel| %>
                <tr>
                  <td><%= ordered_parcel.parcel.awb%> </td>
                  <td><%= ordered_parcel.parcel.description%></td>
                  <td><%= ordered_parcel.parcel.parcel_good%></td>
                  <td><%= ordered_parcel.parcel.weight%></td>
                  <td><%= ordered_parcel.parcel.volume%></td>
                </tr>
                <% end %>
                <tr>
                  <td></td>
                  <td></td>
                  <td>Total: </td>
                  <td><%=@shipment.weight%></td>
                  <td><%=@shipment.volume%></td>
                </tr>
              </tbody>

            </table>


          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-ship fa-fw"></i>Shipment ID <%=@shipment.id%> </h3>
          </div>
          <div class="panel-body">
            <table class="table">
              <tbody>
                <tr>
                  <th>Shipment ID</th>
                  <td><%=@shipment.id%></td>
                </tr>
                <tr>
                  <th>Type of Shipment</th>
                  <td><%=@shipment.type%></td>
                </tr>
                <tr>
                  <th>Final Weight/Volume Metric</th>
                  <td>
                    <% if @shipment.weight >= @shipment.volume %>
                    <%=@shipment.weight%>
                    <% else %>
                    <%=@shipment.volume %>
                    <% end%>
                  </td>
                </tr>
                <tr>
                  <th>Status</th>
                  <td><%=@shipment.status%></td>
                </tr>
                <tr>
                  <th>Total Price</th>
                  <td>RM <%=@shipment.charge%></td>
                </tr>
              </tbody>
            </table>
            <%if @shipment.charge.nil?%>
            <%elsif @shipment.status == "Paid"%>
            <div class="button text-center">
            <%= link_to "View Bill", @shipment.bill_url, class: "btn btn-success btn-lg" %>
            </div>
            <%else%>
            <div class="button text-center">
              <%= link_to "Pay Now", @shipment.bill_url, class: "btn btn-success btn-lg" %>
            </div>
            <%end%>
          </div>
        </div>
        <%= link_to 'Back', shipments_path, class:"btn btn-link" %>
      </div>
    </div>
  </div>
</div>
</div>
