<div class="container banner">
  <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Statements
          </div>
          <div class="panel-body">
            <div class = "shipments text-center">

              <% if @shipments.empty? %>
              <h3 class="text-center">No statements available for show.</h3>
            </div>
            <% else %>
          </div>
          <div style="overflow-x:auto;">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Shipment ID</th>
                  <th>Bill ID</th>
                  <th>Charge</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <%@shipments.each do |shipment|%>
                <tr>
                  <td><%= shipment.updated_at.strftime("%d %b %G")%> </td>
                  <td><%= shipment.id%></td>
                  <td><%= shipment.bill_id%></td>
                  <td> RM <%= shipment.charge%></td>
                  <td><%= shipment.status%></td>
                  <td><%= link_to "View Invoice", invoice_shipment_path(shipment, :format => :pdf), class: "btn-xs", target: :_blank %></td>
                  <%end%>
                  <%end%>
                </tr>
              </tbody>
            </table>
            <nav class="text-center">
              <%= paginate @shipments %>
            </nav>
          </div>
        </div>
      </div>
    </div>
</div>
