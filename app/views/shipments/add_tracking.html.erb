<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-archive"></i> Tracking Number
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-archive fa-fw"></i> Update Tracking Number </h3>
          </div>
          <div class="panel-body">
            <div class="container">
              <%= form_for(@shipment, url: update_tracking_shipment_path(@shipment), html: { id: "tracking-update-form" }) do |f| %>
              <form>
                <div class="form-group">
                  <label for="AWB">Tracking Number:</label>
                  <%= f.text_field :tracking, id: "type_field", class: 'form-control', placeholder:"eg. EH12345MY", type:"text", required: true %>
                </div>
                <div class="text-center">
                <%= f.submit "Submit", class: "btn btn-success btn-lg", type:"submit" %>
                <%= link_to 'Back', shipments_path, class:"btn btn-link" %>
                </div>
              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
