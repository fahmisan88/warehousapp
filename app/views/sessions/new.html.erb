<div id="header">
  <%= render partial: 'partials/header' %>
</div>

<div class="container">
<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="/password/resetpass" target="_self">Forgot password?</a></div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                    <%= form_for(:user, url: sessions_path, html: { id: "user-login-form", class: "form-horizontal" }) do |f| %>
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <%= f.text_field :email, required: true, id: "type_field", class: 'form-control', placeholder:"email", type:"text" %>                                        
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.text_field :password, required: true, id: "type_field", class: 'form-control', placeholder: "password", type:"password" %>
                                    </div>
                                    

                                
                            <div class="input-group">
                                      <div class="checkbox">
                                        <label>
                                          <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                        </label>
                                      </div>
                                    </div>


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls" style="padding-bottom:10px">
                                      <%= f.submit "Login", class: "btn btn-success", type:"submit" %>

                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-sm-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                            Don't have an account! 
                                        <a><%= link_to 'Sign Up Here', new_user_path %></a>
                                        </div>
                                    </div>
                                </div>      
                            <% end %> 
                        </div>                     
                    </div>  
        </div>
    </div>
