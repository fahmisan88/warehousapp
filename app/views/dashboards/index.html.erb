<div id="wrapper">
  <div id="page-wrapper">

    <div class="container-fluid">

      <!-- Page Heading -->
      <br>
      <br>
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">
            My Dashboard <small>
            <% if member_user %>
            <%= "Q" + member_user.ezi_id.to_s.rjust(4,'0') %>
            <% end %>
            </small>
          </h1>
          <ol class="breadcrumb">
            <li class="active">
              <i class="fa fa-dashboard"></i> Dashboard
            </li>
          </ol>
        </div>
      </div>
      <!-- /.row -->


      <!-- /.row -->

      <div class="row">
        <div class="col-lg-3 col-md-6">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="fa fa-archive fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                  <div class="huge"><%=@parcels.count%></div>
                  <%if admin_user||staff_user%>
                  <div>Pending Parcels!</div>
                  <% else %>
                  <div>New Arrived Parcels!</div>
                  <% end%>
                </div>
              </div>
            </div>
            <a href="<%=parcels_path%>">
              <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
            </a>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="panel panel-green">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="fa fa-plane fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                  <div class="huge"><%=@shipments.count%></div>
                  <%if admin_user||staff_user%>
                  <div>Pending Shipments!</div>
                  <% else %>
                  <div>Total Shipments!</div>
                  <% end %>
                </div>
              </div>
            </div>
            <a href="<%=shipments_path%>">
              <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
            </a>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="panel panel-yellow">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="fa fa-money fa-5x"></i>
                </div>

                <div class="col-xs-9 text-right">
                  <%if admin_user||staff_user%>
                  <div class="huge">$<%=@todaysale.sum(:charge).floor%></div>
                  <div>Today's Sales!</div>
                  <% else %>
                  <div class="huge">$<%=@pendingpayment.sum(:charge).floor%></div>
                  <div>Pending Payment</div>
                  <% end %>
                </div>

              </div>
            </div>
            <a href="<%=statement_path%>">
              <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
            </a>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="panel panel-red">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="fa fa-money fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                  <div class="huge">$<%=@totalsales.sum(:charge).floor%></div>
                  <%if admin_user||staff_user%>
                  <div>Total Sales!</div>
                  <% else %>
                  <div>Total Spending!</div>
                  <% end %>
                </div>
              </div>
            </div>
            <a href="<%=statement_path%>">
              <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
            </a>
          </div>
        </div>
      </div>
      <!-- /.row -->

      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Total Sales Chart</h3>
            </div>
            <div class="panel-body">
              <div id="morris-area-chart"></div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->

      <div class="row">
        <div class="col-lg-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Todays Currency</h3>
            </div>
            <div class="panel-body">
              <div class="list-group">
                <b href="#" class="list-group-item">
                  <i class="fa fa-fw fa-dolar"></i>1 MYR = <%=@currency.myr2rmb%> RMB
                </b>
              </div>
              <%if admin_user||staff_user%>
              <div class="text-right">
                <a href="<%=edit_currency_path(@currency)%>">Update Currency Rate <i class="fa fa-arrow-circle-right"></i></a>
              </div>
              <% else %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="panel panel-default">
            <% if admin_user || staff_user %>
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Today's Transaction</h3>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Order #</th>
                      <th>Order Date</th>
                      <th>Amount (MYR)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@todaysales.each do |sales|%>
                    <tr>
                      <td><%=current_user.ezi_id%></td>
                      <td><%=sales.bill_id%></td>
                      <td><%=sales.updated_at.strftime("%d-%m-%Y")%></td>
                      <td><%=sales.charge%></td>
                    </tr>
                    <%end%>
                  </tbody>
                </table>
              </div>
              <div class="text-right">
                <a href="<%=statement_path%>">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <% else %>
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Transaction History</h3>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <th>Order #</th>
                      <th>Order Date</th>
                      <th>Amount (MYR)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@todaysales.each do |sales|%>
                    <tr>
                      <td><%=sales.bill_id%></td>
                      <td><%=sales.updated_at.strftime("%d-%m-%Y")%></td>
                      <td><%=sales.charge%></td>
                    </tr>
                    <%end%>
                  </tbody>
                </table>
              </div>
              <div class="text-right">
                <a href="<%=statement_path%>">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="panel panel-default">
            <% if admin_user || staff_user %>
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Pending Transaction</h3>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <th>Bill #</th>
                      <th>Bill at</th>
                      <th>Amount (MYR)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@todaysale2.each do |sales|%>
                    <tr>
                      <td><%=sales.bill_id%></td>
                      <td><%=sales.updated_at.strftime("%d-%m-%Y")%></td>
                      <td><%=sales.charge%></td>
                    </tr>
                    <%end%>
                  </tbody>
                </table>
              </div>
              <div class="text-right">
                <a href="<%=statement_path%>">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <% else %>
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Shipments History</h3>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <th>Shipment ID</th>
                      <th>Status</th>
                      <th>Shipped At</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@shipments.each do |shipment|%>
                    <tr>
                      <td><%=shipment.id%></td>
                      <td><%=shipment.status%></td>
                      <td><%=shipment.updated_at.strftime("%d-%m-%Y")%></td>
                    </tr>
                    <%end%>
                  </tbody>
                </table>
              </div>
              <div class="text-right">
                <a href="<%=shipments_path%>">View All Shipment <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- /.row -->

    </div>
    <!-- /.container-fluid -->

  </div>
  <!-- /#page-wrapper -->
</div>
<br>
