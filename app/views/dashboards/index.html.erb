<div class="container">
  <div class="row banner">
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-archive fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%=@parcels.count%></div>
              <div>New Arrived Parcels!</div>
            </div>
          </div>
        </div>
        <a href="<%=parcels_path%>">
          <div class="panel-footer">
            <span class="pull-left">View Details</span>
            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
            <div class="clearfix"></div>
          </div>
        </a>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-green">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-plane fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%=@shipments.count%></div>
              <div>Total Shipments!</div>
            </div>
          </div>
        </div>
        <a href="<%=shipments_path%>">
          <div class="panel-footer">
            <span class="pull-left">View Details</span>
            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
            <div class="clearfix"></div>
          </div>
        </a>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-yellow">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-money fa-5x"></i>
            </div>

            <div class="col-xs-9 text-right">
              <div class="huge">$<%=@pendingpayment.sum(:charge).floor%></div>
              <div>Awaiting Payment</div>
            </div>

          </div>
        </div>
        <a href="<%=statement_path%>">
          <div class="panel-footer">
            <span class="pull-left">View Details</span>
            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
            <div class="clearfix"></div>
          </div>
        </a>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-red">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-money fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge">$<%=@totalsales%></div>
              <div>Total Spent!</div>
            </div>
          </div>
        </div>
        <a href="<%=statement_path%>">
          <div class="panel-footer">
            <span class="pull-left">View Details</span>
            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
            <div class="clearfix"></div>
          </div>
        </a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Todays Currency</h3>
        </div>
        <div class="panel-body">
          <div class="list-group">
            <b href="#" class="list-group-item">
              <i class="fa fa-fw fa-dolar"></i>1 MYR = <%=@currency.myr2rmb%> RMB
            </b>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Recent Shipments</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
              <thead>
                <tr>
                  <th>Shipment ID</th>
                  <th>Freight</th>
                  <th>Shipped At</th>
                </tr>
              </thead>
              <tbody>
                <%@recent_shipments.each do |shipment|%>
                <tr>
                  <td class="text-center"><%=shipment.id%></td>
                  <td><%=shipment.sea_freight? ? "Sea" : "Air" %></td>
                  <td><%=shipment.updated_at.strftime("%v")%></td>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          <div class="text-right">
            <a href="<%=shipments_path%>">View All Shipment <i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Recent Payments</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
              <thead>
                <tr>
                  <th>Order #</th>
                  <th>Order Date</th>
                  <th>Amount (MYR)</th>
                </tr>
              </thead>
              <tbody>
                <%@recent_payments.each do |pay|%>
                <tr>
                  <td><%=pay.bill_id%></td>
                  <td><%=pay.updated_at.strftime("%v")%></td>
                  <td><%=pay.charge%></td>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          <div class="text-right">
            <a href="<%=statement_path%>">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
